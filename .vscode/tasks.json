{
  "version": "2.0.0",
  "inputs": [
      {
          "id": "commitMessage",
          "type": "promptString",
          "description": "Enter your commit message"
      }
  ],
  "tasks": [
      {
          "label": "Auto Commit and Push",
          "type": "shell",
          "command": "bash",
          "args": [
              "-c",
              "git fetch && git add . && git commit -m '${input:commitMessage}' && git push && git sync"
          ],
          "problemMatcher": [],
          "presentation": {
              "reveal": "never", // Don't reveal the terminal
              "echo": false,     // Don't show the command in the output
              "focus": false,    // Don't focus on the terminal
              "panel": "shared"  // Use a shared terminal panel (optional)
          }
      }
  ]
}
